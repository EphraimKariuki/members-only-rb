<h1>All Posts</h1>
<%= link_to "Sign In", 	new_user_session_path%>

<% if @posts.any? %>
    <% @posts.each do |post|%>
        <h2><%= post.title %></h2>
        <p><%= post.body %></p>
        <p>Author: <%= post.user.username %></p>
        <p>Created at: <%= post.created_at.strftime("%B %d, %Y") %></p>
        <hr>
    <% end %> 
<% else %>
    <p>No posts available.</p>   
<% end %>